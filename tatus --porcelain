[32m+[m[32m        loadingDiv.innerHTML = '<div class="spinner"></div><p>Loading chart...</p>';[m
[32m+[m[32m        chart.appendChild(loadingDiv);[m
[32m+[m[41m        [m
[32m+[m[32m        // Remove loading state after chart is rendered[m
[32m+[m[32m        setTimeout(() => {[m
[32m+[m[32m            loadingDiv.remove();[m
[32m+[m[32m        }, 1000);[m
[32m+[m[32m    });[m
[32m+[m[32m}[m
