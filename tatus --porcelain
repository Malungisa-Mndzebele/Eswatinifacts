[32m+[m[32m// Add tooltips[m
[32m+[m[32mfunction addTooltips() {[m
[32m+[m[32m    const tooltipElements = document.querySelectorAll('[data-tooltip]');[m
[32m+[m[41m    [m
[32m+[m[32m    tooltipElements.forEach(element => {[m
[32m+[m[32m        element.addEventListener('mouseenter', (e) => {[m
[32m+[m[32m            const tooltip = document.createElement('div');[m
[32m+[m[32m            tooltip.className = 'tooltip';[m
[32m+[m[32m            tooltip.textContent = e.target.getAttribute('data-tooltip');[m
[32m+[m[32m            document.body.appendChild(tooltip);[m
[32m+[m[41m            [m
[32m+[m[32m            const rect = e.target.getBoundingClientRect();[m
[32m+[m[32m            tooltip.style.left = rect.left + (rect.width / 2) - (tooltip.offsetWidth / 2) + 'px';[m
[32m+[m[32m            tooltip.style.top = rect.top - tooltip.offsetHeight - 10 + 'px';[m
[32m+[m[32m        });[m
[32m+[m[41m        [m
[32m+[m[32m        element.addEventListener('mouseleave', () => {[m
[32m+[m[32m            const tooltip = document.querySelector('.tooltip');[m
[32m+[m[32m            if (tooltip) tooltip.remove();[m
[32m+[m[32m        });[m
[32m+[m[32m    });[m
[32m+[m[32m}[m
