[32m+[m[32m// Enhanced navigation[m
[32m+[m[32mfunction enhanceNavigation() {[m
[32m+[m[32m    const navLinks = document.querySelectorAll('.nav-menu a');[m
[32m+[m[32m    const sections = document.querySelectorAll('section[id]');[m
[32m+[m[41m    [m
[32m+[m[32m    // Add active state based on scroll position[m
[32m+[m[32m    window.addEventListener('scroll', () => {[m
[32m+[m[32m        let current = '';[m
[32m+[m[32m        sections.forEach(section => {[m
[32m+[m[32m            const sectionTop = section.offsetTop;[m
[32m+[m[32m            const sectionHeight = section.clientHeight;[m
[32m+[m[32m            if (scrollY >= (sectionTop - 200)) {[m
[32m+[m[32m                current = section.getAttribute('id');[m
[32m+[m[32m            }[m
[32m+[m[32m        });[m
[32m+[m[41m        [m
[32m+[m[32m        navLinks.forEach(link => {[m
[32m+[m[32m            link.classList.remove('active');[m
[32m+[m[32m            if (link.getAttribute('href') === '#' + current) {[m
[32m+[m[32m                link.classList.add('active');[m
[32m+[m[32m            }[m
[32m+[m[32m        });[m
[32m+[m[32m    });[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m// Scroll progress indicator[m
[32m+[m[32mfunction addScrollProgress() {[m
[32m+[m[32m    const progressBar = document.createElement('div');[m
[32m+[m[32m    progressBar.className = 'scroll-progress';[m
[32m+[m[32m    document.body.appendChild(progressBar);[m
[32m+[m[41m    [m
[32m+[m[32m    window.addEventListener('scroll', () => {[m
[32m+[m[32m        const scrollTop = window.pageYOffset;[m
[32m+[m[32m        const docHeight = document.body.scrollHeight - window.innerHeight;[m
[32m+[m[32m        const scrollPercent = (scrollTop / docHeight) * 100;[m
[32m+[m[32m        progressBar.style.width = scrollPercent + '%';[m
[32m+[m[32m    });[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m// Keyboard navigation[m
[32m+[m[32mfunction addKeyboardNavigation() {[m
[32m+[m[32m    document.addEventListener('keydown', (e) => {[m
[32m+[m[32m        if (e.key === 'Escape') {[m
[32m+[m[32m            // Close any open modals or menus[m
[32m+[m[32m            const navToggle = document.querySelector('.nav-toggle');[m
[32m+[m[32m            if (navToggle && navToggle.classList.contains('active')) {[m
[32m+[m[32m                navToggle.click();[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m[32m    });[m
[32m+[m[32m}[m
