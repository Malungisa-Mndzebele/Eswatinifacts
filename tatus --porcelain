[32m+[m[32m// Animated Counter Function[m
[32m+[m[32mfunction animateCounters() {[m
[32m+[m[32m    const counters = document.querySelectorAll('.fact-number[data-count]');[m
[32m+[m[41m    [m
[32m+[m[32m    const observer = new IntersectionObserver((entries) => {[m
[32m+[m[32m        entries.forEach(entry => {[m
[32m+[m[32m            if (entry.isIntersecting) {[m
[32m+[m[32m                const counter = entry.target;[m
[32m+[m[32m                const target = parseFloat(counter.getAttribute('data-count'));[m
[32m+[m[32m                const duration = 2000; // 2 seconds[m
[32m+[m[32m                const increment = target / (duration / 16); // 60fps[m
[32m+[m[32m                let current = 0;[m
[32m+[m[41m                [m
[32m+[m[32m                const timer = setInterval(() => {[m
[32m+[m[32m                    current += increment;[m
[32m+[m[32m                    if (current >= target) {[m
[32m+[m[32m                        current = target;[m
[32m+[m[32m                        clearInterval(timer);[m
[32m+[m[32m                    }[m
[32m+[m[41m                    [m
[32m+[m[32m                    // Format the number based on the original format[m
[32m+[m[32m                    const originalText = counter.textContent;[m
[32m+[m[32m                    if (originalText.includes('$')) {[m
[32m+[m[32m                        counter.textContent = '$' + Math.floor(current).toLocaleString();[m
[32m+[m[32m                    } else if (originalText.includes('%')) {[m
[32m+[m[32m                        counter.textContent = current.toFixed(1) + '%';[m
[32m+[m[32m                    } else if (originalText.includes('M')) {[m
[32m+[m[32m                        counter.textContent = current.toFixed(2) + 'M';[m
[32m+[m[32m                    } else {[m
[32m+[m[32m                        counter.textContent = Math.floor(current).toLocaleString();[m
[32m+[m[32m                    }[m
[32m+[m[32m                }, 16);[m
[32m+[m[41m                [m
[32m+[m[32m                observer.unobserve(counter);[m
[32m+[m[32m            }[m
[32m+[m[32m        });[m
[32m+[m[32m    }, { threshold: 0.5 });[m
[32m+[m[41m    [m
[32m+[m[32m    counters.forEach(counter => observer.observe(counter));[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m// Smooth scroll to section[m
[32m+[m[32mfunction scrollToSection(sectionId) {[m
[32m+[m[32m    const section = document.getElementById(sectionId);[m
[32m+[m[32m    if (section) {[m
[32m+[m[32m        section.scrollIntoView({[m
