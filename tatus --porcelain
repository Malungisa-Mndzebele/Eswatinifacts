[32m+[m[32m                    if (current >= target) {[m
[32m+[m[32m                        current = target;[m
[32m+[m[32m                        clearInterval(timer);[m
[32m+[m[32m                    }[m
[32m+[m[41m                    [m
[32m+[m[32m                    // Format the number based on the original format[m
[32m+[m[32m                    const originalText = counter.textContent;[m
